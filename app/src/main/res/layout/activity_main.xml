<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.android.courtcounter.MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">


        <TextView
            android:id="@+id/team_a_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Team A" />

        <TextView
            android:id="@+id/team_a_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="" />

        <Button
            android:id="@+id/button_3_points"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center_horizontal"
            android:onClick="threePointsForTeamA"
            android:text="+ 3 Points"
            android:textAllCaps="true" />

        <Button
            android:id="@+id/button_2_points"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center_horizontal"

            android:onClick="twoPointsForTeamA"
            android:text="+ 2 Points"
            android:textAllCaps="true" />

        <Button
            android:id="@+id/button_free_throw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"

            android:gravity="center_horizontal"
            android:onClick="freeThrow"

            android:text="free throw"
            android:textAllCaps="true" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">


        <TextView
            android:id="@+id/team_b_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Team B" />

        <TextView
            android:id="@+id/team_b_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="" />

        <Button
            android:id="@+id/button_b_3_points"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center_horizontal"
            android:onClick="threePointsForTeamA"
            android:text="+ 3 Points"
            android:textAllCaps="true" />

        <Button
            android:id="@+id/button_b_2_points"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center_horizontal"

            android:onClick="twoPointsForTeamA"
            android:text="+ 2 Points"
            android:textAllCaps="true" />

        <Button
            android:id="@+id/button_b_free_throw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"

            android:gravity="center_horizontal"
            android:onClick="freeThrow"

            android:text="free throw"
            android:textAllCaps="true" />

    </LinearLayout>


</LinearLayout>